@{
    ViewData["Title"] = "TaskManagement Page";
}
<div class="container">
    <div class="text-center bg-notice-me p-3 text-white">
        <h1>Task Progress</h1>
    </div>
    
    <div class="input-group my-4 w-100" style="padding:20px">
        <input type="text" class="form-control" placeholder="Search Assistant By Student Number" />
        <button type="button" class="input-group-text bg-notice-me">Search</button>
    </div>

    <div class="row screen-boundary">
        <div class="col-4 col-lg-2 border-gray ">
            <h3>Filter by:</h3>
            <select class="btn ag-dropdown">
                <option value="">Select Module</option>
                <option value="module1">Module 1</option>
                <option value="module2">Module 2</option>
            </select>
            <select class="btn ag-dropdown">
                <option value="">Select Task</option>
                <option value="marking">Marking</option>
                <option value="invigilating">Invigilating</option>
                <option value="tutoring">Tutoring</option>
            </select>
            <h3>Assistants</h3>
            <div class="overflow-auto" style="max-height: 390px">
                <ul class="list-group">
                    @* @for(Assistant ass in Model)
                    {
                    <li class="list-group-item">
                    Username: @ass.Username Role: @ass.Type
                    </li>
                    } *@
                    <li class="list-group-item">
                        Username: johndoe Role: Tutor
                    </li>
                    <li class="list-group-item">
                        Username: milli Role: Marker
                    </li>
                    <li class="list-group-item">
                        Username: milli Role: Marker
                    </li>
                    <li class="list-group-item">
                        Username: milli Role: Marker
                    </li>
                    <li class="list-group-item">
                        Username: milli Role: Marker
                    </li>
                    <li class="list-group-item">
                        Username: milli Role: Marker
                    </li>
                </ul>
            </div>
        </div>

        <div class="col mx-2 border-gray bg-white">
            <div>
                
                <div class="assistant-item">
                    <h4>Username: assistant1</h4>
                    <p>Role: Tutor</p>
                    <button type="button" class="button" data-bs-toggle="collapse"
                            data-bs-target="#taskdetails" aria-controls="taskdetails" aria-expanded="false">
                        View Progress
                    </button>

                    <div class="collapse m-1" id="taskdetails">
                        <p>Task 1: Marking</p>
                        <p>Task 2: Tutoring</p>
                        <div style="margin-top: 10px" class= "feedback-box">
                            <label for="feedback-assistant1">Feedback:</label>
                            <textarea id="feedback-assistant1" rows="3"></textarea>
                        </div>
                        <div>
                            <button class="button" onclick="provideGuidance('assistant1')">Provide Guidance</button>
                            <button class="button back-button" onclick="goBack()">Back</button>
                        </div>
                    </div>
                </div>
                <!-- Repeat .assistant-item for other assistants -->
            </div>
        </div>
    </div>
</div>


