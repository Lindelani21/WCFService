<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AssistantGenesis_Web_App</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AssistantGenesis_Web_App.styles.css" asp-append-version="true" />
</head>
<body class="h-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Assistant Genesis</a>
                <button type="button" class="btn bg-notice-me dropdown-toggle" data-bs-toggle="dropdown">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <ul class="dropdown-menu">
                    <li class="dropdown-item">
                        <a class="btn text-dark bg-notice-me" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="dropdown-item">
                        <a class="btn text-dark bg-notice-me" asp-area="" asp-controller="Notifications" asp-action="Index">Notifications</a>
                    </li>
                    <li class="dropdown-item">
                        <a class="btn text-dark bg-notice-me" asp-area="" asp-controller="ApplicationReview" asp-action="Index">Application Review</a>
                    </li>
                    <li class="dropdown-item">
                        <a class="btn text-dark bg-notice-me" asp-area="" asp-controller="UserManagement" asp-action="Index">User Management</a>
                    </li>
                    <li class="dropdown-item">
                        <a class="btn text-dark bg-notice-me" asp-area="" asp-controller="Modules" asp-action="Index">Modules</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="row">
        <main role="main" class="col content">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Assistant Genesis - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
