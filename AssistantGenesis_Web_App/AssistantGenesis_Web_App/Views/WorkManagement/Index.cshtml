@{
    ViewData["Title"] = "WorkManagement Page";
}
<div class="row" class="container w-100">
    <div class="col container px-5 px-5">
        <!-- Header Section -->
        <div class="text-center bg-notice-me p-3 text-white">
            <h1>Work Management</h1>
        </div>
        <!-- Main Content Area -->
        <div class="content"  >
            <!-- Search Box -->
            <div class="input-group my-2 w-50" style="padding:20px;justify-content:center;align-items:center"">
                <input type="text" class="form-control" placeholder="Search Assistant By Student Number" />
                <button type="button" class="input-group-text bg-notice-me text-white">Search</button>
            </div>
            

            <!-- Assistant Details Block -->
            <div class="assistant-details">
                <h2>Assistant Details</h2>
                <p>Role: <span id="role">N/A</span></p>
                <p>Name: <span id="name">N/A</span></p>
            </div>

            <!-- Task Assignment Block -->
            <div class="task-assign">
                <select>
                    <option value="tutoring">Tutoring</option>
                    <option value="invigilating">Invigilating</option>
                    <option value="marking">Marking</option>
                </select>
                <input type="number" placeholder="Assign hours">
                <input type="date">
                <button>Assign</button>
            </div>
        </div>
    </div>
</div>
    
